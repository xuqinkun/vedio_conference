            <Insets left="5.0" right="5.0" />
         </VBox.margin></TextArea>
      <HBox alignment="CENTER_RIGHT" prefHeight="31.0" prefWidth="266.0">
         <children>
            <Label fx:id="sendMessageLabel" alignment="CENTER_RIGHT" onMouseClicked="#sendMessage" prefHeight="29.0" prefWidth="302.0" text="Send" textFill="#999999">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>
