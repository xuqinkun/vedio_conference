<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox fx:id="chatLayout" maxWidth="387.0" minWidth="300.0" prefHeight="453.0" prefWidth="387.0" style="-fx-border-color: #dddddd;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ChatRoomController">
   <children>
      <AnchorPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="306.0" prefWidth="385.0">
         <children>
            <VBox fx:id="chatMessageContainer" maxWidth="-Infinity" minHeight="306.0" minWidth="-Infinity" prefHeight="306.0" prefWidth="370.0" spacing="5.0" AnchorPane.leftAnchor="0.0" />
